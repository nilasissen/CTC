            </intent-filter>
        </activity>
        <activity
            android:name="android.intent.action.SetInfo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SETINFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
